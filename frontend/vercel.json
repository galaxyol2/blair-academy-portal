{
  "cleanUrls": true,
  "redirects": [
    { "source": "/login.html", "destination": "/login", "permanent": true },
    { "source": "/signup.html", "destination": "/signup", "permanent": true },
    {
      "source": "/forgot-password.html",
      "destination": "/forgot-password",
      "permanent": true
    },
    {
      "source": "/reset-password.html",
      "destination": "/reset-password",
      "permanent": true
    },
    { "source": "/index.html", "destination": "/dashboard", "permanent": true }
  ],
  "rewrites": [
    { "source": "/", "destination": "/login.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/signup", "destination": "/signup.html" },
    { "source": "/forgot-password", "destination": "/forgot-password.html" },
    { "source": "/reset-password", "destination": "/reset-password.html" },
    { "source": "/dashboard", "destination": "/index.html" }
  ]
}
